# repeat newdeal, cancel by buyer
jcleos push action eosescrowapp cancel '["326358235"]' -p escrowalice1@active

# new deal: 286652199

# Chris cannot accept the deal
jcleos push action eosescrowapp accept '["escrowchris1", "286652199"]' -p escrowchris1@active
# Chris cannot accept for someone
jcleos push action eosescrowapp accept '["escrowalice1", "286652199"]' -p escrowchris1@active

# Alice confirms, results in "flags": 1
jcleos push action eosescrowapp accept '["escrowalice1", "286652199"]' -p escrowalice1@active
# Alice cannot confirm twice
jcleos push action eosescrowapp accept '["escrowalice1", "286652199"]' -p escrowalice1@active

# Bob confirms. results in "flags": 3
jcleos push action eosescrowapp accept '["escrowbob111", "286652199"]' -p escrowbob111@active

# Alice pays without memo: error
jcleos push action onessusblock transfer '["escrowalice1", "eosescrowapp", "1.0000 VOID", ""]' -p escrowalice1@active
# Alice pays with garbage memo: error
jcleos push action onessusblock transfer '["escrowalice1", "eosescrowapp", "1.0000 VOID", "blah"]' -p escrowalice1@active
# Alice pays with extra space in memo: error
jcleos push action onessusblock transfer '["escrowalice1", "eosescrowapp", "1.0000 VOID", "286652199 "]' -p escrowalice1@active
# Alice pays with correct memo, wrong amount: error
jcleos push action onessusblock transfer '["escrowalice1", "eosescrowapp", "1.0000 VOID", "286652199"]' -p escrowalice1@active
# Alice pays incorrect currency: error comparison of assets with different symbols is not allowed
jcleos push action eosio.token transfer '["escrowalice1", "eosescrowapp", "0.1000 JUNGLE", "286652199"]' -p escrowalice1@active
#Alice pays to wrong deal id: error, Cannot find deal ID: 3198668121
jcleos push action onessusblock transfer '["escrowalice1", "eosescrowapp", "0.1000 VOID", "3198668121"]' -p escrowalice1@active

# Bob tries to transfer: error, The deal can only funded by buyer
jcleos push action onessusblock transfer '["escrowbob111", "eosescrowapp", "0.1000 VOID", "286652199"]' -p escrowbob111@active

# Correct payment: "flags": 7
jcleos push action onessusblock transfer '["escrowalice1", "eosescrowapp", "0.1000 VOID", "286652199"]' -p escrowalice1@active

# Alice tries to cancel, error: The deal is funded, so only seller can cancel it
jcleos push action eosescrowapp cancel '["286652199"]' -p escrowalice1@active

# Bob cancels the deal, funds return to Alice
jcleos --print-response push action eosescrowapp cancel '["286652199"]' -p escrowbob111@active

# new deal: 2041396278
# Alice pays without the deal being accepted, error: The deal is not accepted yet by both parties
jcleos push action onessusblock transfer '["escrowalice1", "eosescrowapp", "0.1000 VOID", "2041396278"]' -p escrowalice1@active
# Alice accepts
jcleos push action eosescrowapp accept '["escrowalice1", "2041396278"]' -p escrowalice1@active
# Alice pays: error, The deal is not accepted yet by both parties
jcleos push action onessusblock transfer '["escrowalice1", "eosescrowapp", "0.1000 VOID", "2041396278"]' -p escrowalice1@active
# Alice cancels
jcleos push action eosescrowapp cancel '["2041396278"]' -p escrowalice1@active

# new deal: 2914838107

# Bob accepts, "flags": 2
jcleos push action eosescrowapp accept '["escrowbob111", "2914838107"]' -p escrowbob111@active
# Alice pays: error, The deal is not accepted yet by both parties
jcleos push action onessusblock transfer '["escrowalice1", "eosescrowapp", "0.1000 VOID", "2914838107"]' -p escrowalice1@active
# Alice accepts:
jcleos push action eosescrowapp accept '["escrowalice1", "2914838107"]' -p escrowalice1@active
# Alice pays, "flags": 7
jcleos push action onessusblock transfer '["escrowalice1", "eosescrowapp", "0.1000 VOID", "2914838107"]' -p escrowalice1@active

# Alice tries to call "delivered", error: Only seller can mark a deal as delivered
jcleos push action eosescrowapp delivered '["2914838107", "hello"]' -p escrowalice1@active

# Bob indicates the delivery, "flags": 15
jcleos push action eosescrowapp delivered '["2914838107", "Pumpkins delivered, expedite number 34r8934r243"]' -p escrowbob111@active
# Bob tries to cancel, error: The deal is already delivered, cannot cancel
jcleos push action eosescrowapp cancel '["2914838107"]' -p escrowbob111@active

# Bob tries to sign Goods Received, error: Only buyer can sign-off Goods Received
jcleos push action eosescrowapp goodsrcvd '["2914838107"]' -p escrowbob111@active

# Alice signs Goods Received: Bob received money, deal erased
jcleos --print-response push action eosescrowapp  goodsrcvd '["2914838107"]' -p escrowalice1@active

# Alice creates a deal: "flags": 1
jcleos --print-response push action eosescrowapp newdeal '["escrowalice1", "Alice buys 5 pumpkins from Bob and pays 0.1 VOID", "onessusblock", "0.1000 VOID", "escrowalice1", "escrowbob111", "escrowchris1", 5]"' -p escrowalice1@active

# Bob creates a deal: "flags": 2
jcleos --print-response push action eosescrowapp newdeal '["escrowbob111", "Alice buys 5 pumpkins from Bob and pays 0.1 VOID", "onessusblock", "0.1000 VOID", "escrowalice1", "escrowbob111", "escrowchris1", 5]"' -p escrowbob111@active



# There are no expired deals, so we get an error.
jcleos --print-response push action eosescrowapp wipeexpired '["5"]' -p escrowalice1@active



####  Expiring and arbitration ####

Modifying the timeouts:

const int NEW_DEAL_EXPIRES = 120;
const int ACCEPTED_DEAL_EXPIRES = 120;
const int DELIVERED_DEAL_EXPIRES = 120;
const int DAY_SEC = 10;

jcleos push action eosescrowapp setarbiter '["escrowchris1", "Chris", "chris@domain.com", "Blah blah", "https://www.domain.com", "+1347824947932141", "US"]"' -p escrowchris1@active


# newdeal, wait for 2 minutes, then newdeal again.

vi /tmp/x
jcleos push action eosescrowapp newdeal '["escrowbob111", "Alice buys 5 pumpkins from Bob and pays 0.1 VOID", "onessusblock", "0.1000 VOID", "escrowalice1", "escrowbob111", "escrowchris1", 5]"' -p escrowbob111@active
sleep 130
jcleos push action eosescrowapp newdeal '["escrowbob111", "Alice buys 5 pumpkins from Bob and pays 0.1 VOID", "onessusblock", "0.1000 VOID", "escrowalice1", "escrowbob111", "escrowchris1", 5]"' -p escrowbob111@active

.  /tmp/x
# Result: only one deal remaining



# newdeal, accept, wait 2 minutes, newdeal again
vi /tmp/x
jcleos push action eosescrowapp accept '["escrowalice1", "'$DEAL'"]' -p escrowalice1@active
sleep 130
jcleos push action eosescrowapp newdeal '["escrowbob111", "test 3", "onessusblock", "0.1000 VOID", "escrowalice1", "escrowbob111", "escrowchris1", 5]"' -p escrowbob111@active



jcleos push action eosescrowapp newdeal '["escrowbob111", "Alice buys 5 pumpkins from Bob and pays 0.1 VOID", "onessusblock", "0.1000 VOID", "escrowalice1", "escrowbob111", "escrowchris1", 5]"' -p escrowbob111@active
DEAL=3226311074
. /tmp/x

# Result: the expired accepted deal got erased



# newdeal, accept, pay, wait for expiration. the payment should be refunded.
vi /tmp/x
jcleos push action eosescrowapp accept '["escrowalice1", "'$DEAL'"]' -p escrowalice1@active
jcleos push action onessusblock transfer '["escrowalice1", "eosescrowapp", "0.1000 VOID", "'$DEAL'"]' -p escrowalice1@active
sleep 60
jcleos push action eosescrowapp newdeal '["escrowbob111", "test 5", "onessusblock", "0.1000 VOID", "escrowalice1", "escrowbob111", "escrowchris1", 5]"' -p escrowbob111@active


jcleos push action eosescrowapp newdeal '["escrowbob111", "Alice buys 5 pumpkins from Bob and pays 0.1 VOID", "onessusblock", "0.1000 VOID", "escrowalice1", "escrowbob111", "escrowchris1", 5]"' -p escrowbob111@active
DEAL=3226311074
. /tmp/x


# arbitration test: accept, pay, delivered
vi /tmp/x
jcleos push action eosescrowapp accept '["escrowalice1", "'$DEAL'"]' -p escrowalice1@active
sleep 1
jcleos push action onessusblock transfer '["escrowalice1", "eosescrowapp", "0.1000 VOID", "'$DEAL'"]' -p escrowalice1@active
sleep 1
jcleos push action eosescrowapp delivered '["'$DEAL'", "Pumpkins delivered, expedite number 34r8934r243"]' -p escrowbob111@active
sleep 130
jcleos push action eosescrowapp newdeal '["escrowbob111", "test 5", "onessusblock", "0.1000 VOID", "escrowalice1", "escrowbob111", "escrowchris1", 5]"' -p escrowbob111@active

